<div class="container mx-auto mt-5" >
    <div id="carouselExampleControls" class="carousel slide img" data-bs-ride="carousel">
        <div class="carousel-inner">
            {{#each imagen}}
            <div class="carousel-item {{#if @first}}active {{/if}}">
                <h3>{{titulo}} <a class="btn btn-danger text-center" href="/fotos/eliminar/{{id}}/{{public_id}}">Eliminar</a> <a class="btn btn-info text-center" href="/fotos/modificar/{{id}}">Modificar</a>
                </h3>
                <h5>{{descripcion}}</h5>
                <div class="contorno"><img src="{{image_url}}" class="d-block w-100 imgint" alt="..."></div>
            </div>
            {{/each}}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>